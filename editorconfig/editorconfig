# http://editorconfig.org
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.css]
indent_size = 4

[*.js]
indent_size = 4

[*.json]
indent_size = 4
insert_final_newline = ignore

[*.yml]
indent_size = 4
trim_trailing_whitespace = false

[*.html]
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 80

[Dockerfile]
indent_size = 4

[Vagrantfile]
indent_size = 4

# Makefiles use tabs for indentation
[Makefile]
indent_style = tab

# Batch files use tabs for indentation
[*.bat]
indent_style = tab

[*.txt]
trim_trailing_whitespace = false

[*.md]
indent_size = 4
trim_trailing_whitespace = false

# certain CSS and JavaScript files shouldn't be changed
[**.css.map,**.min.css,**.js.map,**.min.js]
indent_style = ignore
insert_final_newline = ignore

# vim config files
[**.vimrc]
trim_trailing_whitespace = false
