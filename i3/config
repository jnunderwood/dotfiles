# sync clipboard and cutbuffer
exec --no-startup-id /usr/bin/autocutsel

# instant messaging
exec --no-startup-id /usr/bin/pidgin

# email / calendar
exec --no-startup-id /usr/bin/thunderbird

# mount google drive
exec --no-startup-id /usr/bin/google-drive-ocamlfuse /home/junderwo/GoogleDrive

# network monitor applet (careful on remote desktops!)
exec --no-startup-id /usr/bin/nm-applet

# solaar, applet for logitech wireless mouse
exec --no-startup-id /usr/bin/solaar

# volume applet
exec --no-startup-id /usr/bin/pasystray
#exec --no-startup-id /usr/bin/volumeicon

# keyring
exec --no-startup-id gnome-settings-daemon
exec --no-startup-id gnome-keyring-daemon /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# VNC Config
# exec /usr/bin/vnc4config

# ------------------------------------------------------------------------------
# start these programs when i3 starts or restarts
# ------------------------------------------------------------------------------

# background image
exec_always --no-startup-id feh --bg-scale $HOME/Pictures/Wallpapers/haiku.png

# screensaver after 5 minutes
exec_always --no-startup-id xautolock -time 5 -secure -locker "/usr/bin/i3lock --color=000000"

# DPI for 27" UltraHD monitor, mirrored display on laptop
# exec_always --no-startup-id xrandr --dpi 163
exec_always --no-startup-id xrandr --dpi 163 --output eDP1 --mode 3840x2160 --scale 1x1 --output DP1 --same-as eDP1 --mode 3840x2160 --scale 1x1

